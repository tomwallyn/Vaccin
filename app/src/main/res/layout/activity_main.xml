<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btn_stock"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/blue_fill__rounded_color"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="goToStock"
        android:text="Afficher les stocks" />

    <Button
        android:id="@+id/btn_reserv"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="18.7dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/blue_fill__rounded_color"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="goToRDV"
        android:text="Afficher les reservations" />

    <Button
        android:id="@+id/btn_addreserv"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="182.7dp"
        android:layout_marginRight="62dp"
        android:background="@drawable/blue_fill__rounded_color"
        android:gravity="center"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:onClick="goToNewRDV"
        android:text="Faire une reservation" />

    <TextView
        android:id="@+id/alerte"
        android:layout_gravity="center"
        android:layout_width="920dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_addreserv"
        android:layout_marginBottom="-54dp"
        android:text="Aucune alerte dans le stock"
        android:textSize="20dp" />


</RelativeLayout>